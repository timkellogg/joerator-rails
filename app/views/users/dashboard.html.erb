<% provide(:title, "Admin Dashboard") %>
<div id="admin-wrapper" class="text-center">
  <div class="text-center row">
    <h2>Admin Dashboard</h2>
  </div>

  <% if current_user && current_user.admin? %>
    <%= link_to 'New Coffeeshop', new_coffeeshop_path, class: 'btn btn-blue' %>
  <% end %>

  <div class="container simple-box text-center">
    <% @coffeeshops.each do |coffeeshop| %>
    <div id="coffeeshop-<%= coffeeshop.id %>">
      <%= link_to "Approve", { :controller => "coffeeshops", :action => "approve", :id => coffeeshop.id }, :method => :patch, :remote => true %>
      <ul>
        <li>Name: <%= coffeeshop.name %></li>
        <li>Address: <%= coffeeshop.address %></li>
        <li>Website: <%= coffeeshop.webAddress %></li>
        <li>Style: <%= coffeeshop.style %></li>
        <li>City: <%= coffeeshop.city %></li>
        <li>State: <%= coffeeshop.state %></li>
        <li>Picture: <%= coffeeshop.picture %></li>
      </ul>
    </div>
    <% end %>
  </div>
</div>

