<% provide(:title, "Edit #{@user.name}") %>

  <h2>Update your profile</h2>

<div class="simple-box container">

  <div class="text-left col-xs-12">
    <h4>The Essentials</h4>
  </div>

    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <div class="form-group text-left">
        <div class="col-md-6">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="col-md-6">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
      </div>  

      <div class="form-group text-left">
        <div class="col-md-6">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="col-md-6">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
      </div>

      <div class="text-left col-xs-12">
        <h4>The Extras</h4>
      </div>

      <div class="form-group text-left">
        <div class="col-md-6">
          <%= f.label :location %>
          <%= f.text_field :location, class: 'form-control' %>
        </div>
        <div class="col-md-6">
          <%= f.label :favorite_coffee %>
          <%= f.text_field :favorite_coffee, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group text-left">
        <div class="col-xs-12">
          <%= f.label :bio, "Short bio" %>
          <%= f.text_area :bio, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group text-left">
        <div class="col-xs-12">
          <%= fa_icon "facebook-square" %>
          <%= f.label :facebook_link, "Link to Facebook Profile" %>
          <%= f.text_field :facebook_link, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group text-left">
        <div class="col-xs-12">
          <%= fa_icon "twitter-square" %>
          <%= f.label :twitter_link, "Link to Twitter Profile" %>
          <%= f.text_field :twitter_link, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group text-left">
        <div class="col-xs-12">
          <%= fa_icon "google-plus-square" %>
          <%= f.label :google_link, "Link to Google Plus Profile" %>
          <%= f.text_field :google_link, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group text-left">
        <div class="col-xs-12">
          <%= fa_icon "instagram" %>
          <%= f.label :instagram_link, "Link to Instagram Profile" %>
          <%= f.text_field :instagram_link, class: 'form-control' %>
        </div>
      </div>

      <%= f.submit "Save changes", class: "btn btn-blue" %>
    <% end %>
</div>
