        <% end %>
        <%= link_to "#{@user.google_link}" do %>
          <%= fa_icon "google-plus-square" %>
        <% end %>
        <%= link_to "#{@user.instagram_link}" do %>
          <%= fa_icon "instagram" %>
        <% end %>
        <%= link_to "#{@user.twitter_link}" do %>
          <%= fa_icon "twitter-square" %>
        <% end %>
    </div>
  </div>

