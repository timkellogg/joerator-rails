<div class="simple-box container">
  <%= form_for [@menu, @item] do |f| %>
    <% if @item.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

        <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

     <div class="text-left col-xs-12">
        <h4>Basic Information</h4>
      </div>

      <div class="form-group">     
        <div class="col-md-12 text-left">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-6 text-left">
          <%= f.label :meal_type, "Dish type?" %>
          <%= f.select(:meal_type, options_for_select(["appetizer", "brunch", "breakfast", "lunch", "dinner", "holiday"]), {}, { class: 'form-control' })%> 
        </div>
        <div class="col-md-6 text-left">
          <%= f.label :price %>
          <div class="input-group">
            <div class="input-group-addon">$</div>
              <%= f.number_field :price, class: 'form-control text-right' %>
              <!-- <input type="text" class="form-control" id="exampleInputAmount" placeholder="Amount"> -->
            <div class="input-group-addon">.00</div>
          </div>
        </div>
      </div>
        
      <div class="form-group">
        <div class="col-md-12 text-left">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>  
      </div>

      <div class="form-group">     
        <div class="col-md-12 text-left">
          <%= f.label :picture, "Upload Picture" %>
          <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
        </div>
      </div>

      <div class="text-left col-xs-12">
        <h4>Dietary Concerns</h4>
      </div>

      <div class="form-group">
        <div class="col-xs-4 text-left slight-margin-top">
          <%= f.label :gluten_free %>
          <%= f.check_box :gluten_free %>
        </div>
        <div class="col-xs-4 text-left slight-margin-top">
          <%= f.label :veggie_friendly, "Vegetarian Friendly" %>
          <%= f.check_box :veggie_friendly %>
        </div>
        <div class="col-md-4 text-left slight-margin-top">
          <%= f.label :vegan_friendly, "Vegan Friendly" %>
          <%= f.check_box :vegan_friendly %>
        </div>
      </div>

      <div class="col-md-12 btn-container">
        <%= f.submit "Add item", class: 'btn btn-blue' %>
      </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  // Validate picture size 
  $('#item_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>

