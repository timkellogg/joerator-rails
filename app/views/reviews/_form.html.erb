<div id="review-form-container" class="simple-box container">
  <%= form_for([@coffeeshop, @review], remote: true) do |f| %>
    <% if @review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

        <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group text-left">
      <%= f.label :body %>
      <%= f.text_field :body, class: 'form-control' %>
    </div>

    <div class="form-group text-left">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group text-center">
      <div class="col-md-3">
        <%= f.label :qualityRating, "Coffee Quality" %>
        <%= f.number_field :qualityRating, min: 1, max: 5, class: 'form-control' %>
      </div>
      <div class="col-md-3">
        <%= f.label :hipsterRating, "Hip Factor" %>
        <%= f.number_field :hipsterRating, min: 1, max: 5, class: 'form-control' %>
      </div>
      <div class="col-md-3">
        <%= f.label :studyRating, "Atmosphere" %>
        <%= f.number_field :studyRating, min: 1, max: 5, class: 'form-control' %>
      </div>
      <div class="col-md-3">
        <%= f.label :laptopRating, "Amenities" %>
        <%= f.number_field :laptopRating, min: 1, max: 5, class: 'form-control' %>
      </div>
    </div>

    <%= f.submit 'Submit review', class:'btn btn-blue' %>

  <% end %>
</div>
