<div class="row text-center">
  <h1 class="main-heading">Joerator</h1>
  <small>A place to find the world's <b>best</b> coffeeshops.</small>
</div>

<div class="container">
  <div id="home-search" class="container text-center">
    <div class="col-md-6 text-center search-box">
      <%= form_tag(coffeeshops_path, :method => "get", id: "search-form") do %>
        <div class="input-group input-append">
          <span class="input-group-btn">
            <button type="submit" class="btn btn-default btn-lg" type="button"><%= fa_icon "map-marker" %></button>
          </span>
          <%= text_field_tag :search, params[:search], class: "form-control nudge input-lg", placeholder: "Search by location..." %>
        </div>
      <% end %>
    </div>
    <div class="col-md-6 text-center search-box">
      <%= form_tag(coffeeshops_path, :method => "get", id: "search-form") do %>
        <div class="input-group input-append">
          <span class="input-group-btn">
            <button type="submit" class="btn btn-default btn-lg" type="button"><%= fa_icon "search" %></button>
          </span>
          <%= text_field_tag :search, params[:search], class: "form-control nudge input-lg", placeholder: "Search by name..." %>
        </div>
      <% end %>
    </div>
  </div>
</div>



<div class="card-container text-center">
  <% @coffeeshops.each do |coffeeshop| %>
    <div class="col-md-4">
      <div class="card-header">
        <img class="card-image" src=<%= coffeeshop.imageLink %>> 
      </div>
      <div class="card-title">
        <h3><%= truncate(coffeeshop.name, length: 20) %></h3>
      </div>
      <div class="card-body">
        <p>asdlf</p>
      </div>
    </div>
  <% end %>
</div>
