      <%= image_tag("crowd.jpeg", alt: "picture of coffee cup") %>
      <h3>Most Popular</h3>  
    </div>
  <% end %>

  <%= link_to coffeeshops_path(:sort => 'best_study') do %>
    <div class="col-md-4 col-sm-6 home-img">
      <%= image_tag("cup.jpg", alt: "picture of coffee cup") %>
      <h3>Best to Study</h3>  
    </div>
  <% end %>

  <%= link_to coffeeshops_path(:sort => 'best_hipster') do %>
    <div class="col-md-4 col-sm-6 home-img">
      <%= image_tag("hipster.jpeg", alt: "picture of coffee cup") %>
      <h3>Hipster Hangouts</h3>  
    </div>
  <% end %>

  <%= link_to coffeeshops_path(:sort => 'best_laptop') do %>
    <div class="col-md-4 col-sm-6 home-img">
      <%= image_tag("room.jpg", alt: "picture of coffee cup") %>
