</div>

<% if logged_in? %>
  <div class="row btn-container">
    <div class="col-xs-12 btn-panel">
      <button class="btn btn-lg btn-gray"><%= link_to 'List a Coffeeshop', new_coffeeshop_path %></button>
    </div>
  </div>
<% else %>
  <div class="row btn-container">
    <div class="col-xs-12 btn-panel">
      <button class="btn btn-lg btn-gray"><%= link_to 'Signup Today!', signup_path %></button>
    </div>
  </div>
<% end %>


