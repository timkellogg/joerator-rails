<div class="container content-container">

  <% if @came_from_search %>
    <div class="col-md-6 text-center search-box">
      <%= form_tag(coffeeshops_path, :method => "get", id: "search-form") do %>
        <div class="input-group input-append">
          <span class="input-group-btn">
            <button type="submit" class="btn btn-default" type="button"><%= fa_icon "search" %></button>
          </span>
          <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search for..." %>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class=" card-container text-center">
    <% @coffeeshops.each do |coffeeshop| %>
      <div class="col-md-4">
        <div class="card-header">
          <img class="card-image" src=<%= coffeeshop.imageLink %>> 
        </div>
        <div class="card-title">
          <h3><%= truncate(coffeeshop.name, length: 20) %></h3>
        </div>
        <div class="card-body">
          <p>asdlf</p>
        </div>
      </div>
    <% end %>
  </div>

  <% if current_user && current_user.admin? %>
    <%= link_to 'New Coffeeshop', new_coffeeshop_path %>
  <% end %>
</div>
